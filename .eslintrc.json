{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "react-hooks"
  ],
  "rules": {
    "import/prefer-default-export": "off",
    "react-hooks/exhaustive-deps": "warn",
    "no-underscore-dangle": "off",
    "no-param-reassign": "off",
    "prefer-const": [
      "error"
    ]
  },
  "settings": {
    "react": {
      "version": "17.0.2"
    }
  }
}